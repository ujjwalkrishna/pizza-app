<section class="order px-12 py-12">
  <div class="container">
    <h1 class="font-bold mb-4 text-lg">All Orders</h1>
    <% if(messages.success){ %>
      <div id="success-alert" class="flex items-center text-white text-sm font-bold px-4 py-3 bg-green-500"
        role="alert">
        <p><i class="fas fa-info mr-4"></i>
          <%= messages.success %>
        </p>
    <% } %>
      </div>
      <table class="w-full table-auto bg-white">
        <thead>
          <tr>
            <th class="border px-4 py-2 text-left">Orders</th>
            <th class="border px-4 py-2 text-left">Phone</th>
            <th class="border px-4 py-2 text-left">Address</th>
            <th class="border px-4 py-2 text-left">Time</th>
          </tr>
        </thead>
        <tbody>
          <% if(orders.length){ %>
            <% orders.forEach(order=>{ %>
              <tr>
                <td class="border px-4 py-2">
                  <a href="/customer/orders/<%= order._id %>" class="link">
                    <%= order._id %>
                  </a>
                </td>
                <td class="border px-4 py-2">
                  <%= order.phone %>
                </td>
                <td class="border px-4 py-2">
                  <%= order.address %>
                </td>
                <td class="border px-4 py-2">
                  <%= moment(order.createdAt).format('hh:mm A') %>
                </td>
              </tr>
              <% }) %>

                <% }else{ %>
                  <tr>
                    <td class="p-4"><span>No orders found!</span></td>
                  </tr>
                  <% } %>
        </tbody>
      </table>
  </div>
</section>